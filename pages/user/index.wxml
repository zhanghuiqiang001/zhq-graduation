<view class="user_info_wrap">
    <view wx:if="{{userinfo.avatarUrl}}" class="user_img_wrap">
        <image class="user_bg" src="{{userinfo.avatarUrl}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
        <view class="user_info">
            <image class="user_icon" src="{{userinfo.avatarUrl}}" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
            <view class="user_name">
                {{userinfo.nickName}}
            </view>
        </view>
    </view>
    <view wx:else class="user_btn">
        <navigator class="" target="" url="/pages/login/index" hover-class="navigator-hover" open-type="navigate">
            登录
        </navigator>
          
    </view>
</view>



<view class="user_content">
    <view class="user_main">
        <!-- 历史足迹 -->
        <view class="history_wrap">
            <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                <view class="his_num">0</view>
                <view class="his_name">收藏的店铺</view>
            </navigator>
            <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                <view class="his_num">0</view>
                <view class="his_name">收藏的商品</view>
            </navigator>
            <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                <view class="his_num">0</view>
                <view class="his_name">关注的商品</view>
            </navigator>
            <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                <view class="his_num">0</view>
                <view class="his_name">我的足迹</view>
            </navigator>
              
        </view>

        <!-- 我的订单 -->
        <view class="orders_wrap">
            <view class="orders_title">我的订单</view>
            <view class="order_content">
                <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                   <view class="iconfont icon-xiangqing"></view>
                   <view class="order_name">全部订单</view>
                </navigator>
                <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                    <view class="iconfont icon-fukuantongzhi"></view>
                    <view class="order_name">待付款</view>
                 </navigator>
                 <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                    <view class="iconfont icon-kuaidi"></view>
                    <view class="order_name">待收货</view>
                 </navigator>
                 <navigator class="" target="" url="" hover-class="navigator-hover" open-type="navigate">
                    <view class="iconfont icon-kefu"></view>
                    <view class="order_name">售后服务</view>
                 </navigator>
            </view>
        </view>

        <!-- 收货地址管理 -->
        <view class="address_wrap">
            收货地址管理
        </view>
        <!-- 应用信息相关 -->

        <view class="app_info_wrap">
            <view class="app_info_item app_info_contact">
                <text>
                    联系客服
                </text>
                <text>
                    666-888-8888
                </text>
            </view>
            <navigator url="/pages/feedback/index" class="app_info_item">意见反馈</navigator>
                <view class="app_info_item">关于我们</view>
        </view>

        <!-- 推荐 -->
        <view class="recommend_wrap">
            推荐给别人
        </view>
    </view>
</view>
